<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ff242324">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Локальный путь в загрузочному видео" android:id="@+id/textView4"
                      android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:textStyle="bold"
                      android:textSize="20dp" android:textColor="#ffdadada"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Локальный путь к папке на сервере" android:id="@+id/textView5"
                      android:textColor="#ffffffff" android:layout_below="@+id/textView2"
                      android:layout_alignRight="@+id/textView3" android:layout_marginTop="2dp"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:inputType="textMultiLine" android:ems="10" android:id="@+id/editText3"
                      android:layout_gravity="center_horizontal"
                      android:text="http://127.0.0.1:59777/smb/192.168.0.250/Files/"
                      android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
                      android:layout_marginTop="2dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall" android:text="Название самого видео"
                      android:id="@+id/textView6" android:textColor="#ffebebeb" android:layout_below="@+id/textOne"
                      android:layout_alignLeft="@+id/nextStep"/>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:inputType="textMultiLine" android:ems="10" android:id="@+id/editText4"
                      android:text="Interstellar.mp4" android:layout_below="@+id/textView3" android:layout_marginTop="2dp"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Загружать видеоролик с сервера"
                    android:id="@+id/checkBox" android:checked="false" android:layout_marginTop="2dp"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Загрузить на устроиство "
                    android:id="@+id/checkBox2" android:checked="false"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText5"
                    android:hint="Время через которое нужно проверять наличие нового видео"
                    android:layout_marginTop="2dp" android:text="10"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Выбрать звук на переключение канала"
                    android:id="@+id/button3" android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ниже нужно указать путь к файлам .txt на сервере из которых идет загрузка видео и изображений"
                    android:id="@+id/yoga" android:layout_marginTop="2dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText_for_file_path" android:hint="Путь к папке где лежат файлы"
                    android:layout_marginTop="2dp" android:text="http://127.0.0.1:59777/smb/192.168.0.250/Files/"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2_for_image" android:hint="Названия файла с картинками"
                    android:layout_marginTop="2dp" android:text="images.txt"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText6_for_video" android:hint="Название файла с видео" android:layout_marginTop="2dp"
                    android:text="videos.txt" android:singleLine="false"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_nomer_for_server" android:hint="Номер машины (для отправки на сервер)" android:text="10"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Задействовать кнопки громкости в проекте"
                    android:id="@+id/checkBox3" android:checked="true"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text="Применить настройки" android:id="@+id/button2"
                    android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text="Перейти к программе" android:id="@+id/button"
                    android:layout_alignParentBottom="true" android:layout_alignParentRight="true"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>